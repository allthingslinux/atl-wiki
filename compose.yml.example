services:
  mediawiki:
    build:
      context: .
      dockerfile: Dockerfile
      args:
        MEDIAWIKI_MAJOR_VERSION: ${MEDIAWIKI_MAJOR_VERSION}
        MEDIAWIKI_VERSION: ${MEDIAWIKI_VERSION}
        MEDIAWIKI_BRANCH: ${MEDIAWIKI_BRANCH}
        CITIZEN_VERSION: ${CITIZEN_VERSION}
    container_name: atlwiki
    user: "1000:1000"
    volumes:
      - wiki-webroot:/var/www/atlwiki
      - .env:/var/www/atlwiki/.env:ro
    expose:
      - "9000"
    healthcheck:
      test: ["CMD", "php-fpm", "-t"]
      interval: 30s
      timeout: 10s
      start_period: 60s
      retries: 3
    depends_on:
      redis:
        condition: service_started
    networks:
      - wiki-network
    restart: unless-stopped

  nginx:
    image: nginx:stable-alpine
    container_name: atlwiki-nginx
    depends_on:
      mediawiki:
        condition: service_healthy
    ports:
      - "3000:80"
    volumes:
      - wiki-webroot:/var/www/atlwiki:ro
      - ./mediawiki.conf:/etc/nginx/conf.d/mediawiki.conf:ro
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost/"]
      interval: 30s
      timeout: 10s
      start_period: 30s
      retries: 3
    networks:
      - wiki-network
    restart: unless-stopped

  redis:
    image: redis:alpine
    container_name: atlwiki-redis
    command: redis-server --appendonly yes --maxmemory 256mb --maxmemory-policy allkeys-lru
    volumes:
      - redis-data:/data
    expose:
      - "6379"
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 30s
      timeout: 10s
      start_period: 30s
      retries: 3
    networks:
      - wiki-network
    restart: unless-stopped

  sitemap-generator:
    image: mediawiki:${MEDIAWIKI_VERSION}-fpm-alpine
    container_name: atlwiki-sitemap
    user: "1000:1000"
    volumes:
      - wiki-webroot:/var/www/atlwiki
    command: >
      sh -c "
        echo '0 6 * * * php /var/www/atlwiki/mediawiki/maintenancerun.php generateSitemap --memory-limit=50M --fspath=/var/www/atlwiki/sitemap/ --identifier=atl.wiki --urlpath=/sitemap/ --server=https://atl.wiki --compress=yes --skip-redirects' | crontab - &&
        crond -f
      "
    depends_on:
      mediawiki:
        condition: service_healthy
    networks:
      - wiki-network
    restart: unless-stopped

networks:
  wiki-network:
    driver: bridge

volumes:
  wiki-webroot:
    driver: local
  redis-data:
    driver: local
