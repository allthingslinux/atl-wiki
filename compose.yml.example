services:
  mediawiki:
    build:
      context: .
      dockerfile: Dockerfile
      args:
        MEDIAWIKI_MAJOR_VERSION: ${MEDIAWIKI_MAJOR_VERSION}
        MEDIAWIKI_VERSION: ${MEDIAWIKI_VERSION}
        MEDIAWIKI_BRANCH: ${MEDIAWIKI_BRANCH}
        CITIZEN_VERSION: ${CITIZEN_VERSION}
    container_name: atlwiki
    user: "1000:1000"
    volumes:
      - wiki-webroot:/var/www/atlwiki
      - .env:/var/www/atlwiki/.env:ro
    expose:
      - "9000"
    healthcheck:
      test: ["CMD", "php-fpm", "-t"]
      interval: 30s
      timeout: 10s
      start_period: 60s
      retries: 3
    depends_on:
      redis:
        condition: service_started
    networks:
      - wiki-network

  nginx:
    image: nginx:stable-alpine
    container_name: atlwiki-nginx
    depends_on:
      mediawiki:
        condition: service_healthy
    ports:
      - "3000:80"
    volumes:
      - wiki-webroot:/var/www/atlwiki:ro
      - ./mediawiki.conf:/etc/nginx/conf.d/mediawiki.conf:ro
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost/"]
      interval: 30s
      timeout: 10s
      start_period: 30s
      retries: 3
    networks:
      - wiki-network

  redis:
    image: redis:alpine
    container_name: atlwiki-redis
    ports:
      - "6379:6379"
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 30s
      timeout: 10s
      start_period: 30s
      retries: 3
    networks:
      - wiki-network

networks:
  wiki-network:
    driver: bridge

volumes:
  wiki-webroot:
    driver: local
