services:
  atlwiki:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: atlwiki
    volumes:
      - .env:/var/www/atlwiki/.env
    ports:
      - "3001:80"
    depends_on:
      - redis

  redis:
    image: redis:7-alpine
    container_name: atlwiki-redis
    command: redis-server --requirepass ${REDIS_PASSWORD}
    environment:
      - REDIS_PASSWORD=${REDIS_PASSWORD}
    ports:
      - "6379:6379"
