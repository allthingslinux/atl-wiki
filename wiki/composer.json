{
    "name": "allthingslinux/atl.wiki-configs",
    "description": "Configuration files for atl.wiki MediaWiki instance",
    "type": "project",
    "require": {
        "vlucas/phpdotenv": "^5.6.2"
    },
    "require-dev": {
        "mediawiki/mediawiki-codesniffer": "48.0.0"
    },
    "scripts": {
        "phpcs": "phpcs -ps",
        "phpcbf": "phpcbf",
        "test": [
            "@phpcs"
        ],
        "fix": [
            "@phpcbf"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
