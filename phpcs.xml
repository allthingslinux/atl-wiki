<?xml version="1.0"?>
<ruleset name="PSR12">
    <description>PSR-12 Coding Standard</description>

    <!-- Use PSR-12 standard -->
    <rule ref="PSR12"/>

    <!-- Paths to check -->
    <file>wiki</file>

    <!-- Exclude vendor and other directories -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/cache/*</exclude-pattern>

    <!-- Show progress and use colors -->
    <arg name="colors"/>
    <arg value="sp"/>
</ruleset>
